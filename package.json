{
  "name": "constl",
  "description": "Secure boilerplate for Electron app based on Vite",
  "author": {
    "email": "julien.malard@mail.mcgill.ca",
    "name": "Julien Jean Malard-Adam",
    "url": "https://github.com/julienmalard"
  },
  "version": "1.0.0",
  "type": "module",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production pnpm run build && electron-builder build --config .electron-builder.config.cjs --dir --config.asar=false",
    "compile:web": "cross-env MODE=production WEB=true NODE_OPTIONS='--max-old-space-size=8192' pnpm vite build packages/renderer",
    "test": "pnpm run test:main && pnpm run test:preload && pnpm run test:renderer && pnpm run test:e2e",
    "test:firefox": "pnpm run compile:web && ENVIRONNEMENT_TESTS=firefox vitest run",
    "test:webkit": "pnpm run compile:web && ENVIRONNEMENT_TESTS=webkit vitest run",
    "test:chrome": "pnpm run compile:web && ENVIRONNEMENT_TESTS=chromium vitest run",
    "test:e2e": "pnpm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests --coverage",
    "test:preload": "vitest run -r packages/preload --passWithNoTests --coverage",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests --coverage",
    "watch": "node scripts/watch.mjs",
    "watch:web": "cross-env WEB=true vite packages/renderer",
    "preview:web": "pnpm compile:web && cross-env WEB=true vite preview packages/renderer",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,vue",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "pnpm run typecheck:main && pnpm run typecheck:preload && pnpm run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,vue,json}\""
  },
  "devDependencies": {
    "@constl/utils-tests": "^1.2.3",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/d3": "^7.4.3",
    "@types/deep-equal": "^1.0.4",
    "@types/file-saver": "^2.0.7",
    "@types/js-cookie": "^3.0.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.21",
    "@types/platform": "^1.3.6",
    "@types/uuid": "^9.0.8",
    "@types/webfontloader": "^1.6.38",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-vue": "5.0.4",
    "@vitest/coverage-istanbul": "^1.3.1",
    "@vue/test-utils": "2.4.5",
    "cross-env": "7.0.3",
    "electron": "29.2.0",
    "electron-builder": "24.13.3",
    "eslint": "8.57.0",
    "eslint-plugin-vue": "9.24.0",
    "happy-dom": "14.5.1",
    "nano-staged": "0.8.0",
    "node-pre-gyp": "^0.17.0",
    "playwright": "1.43.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-resolve-id": "^1.0.2",
    "simple-git-hooks": "2.11.1",
    "typescript": "5.4.4",
    "unplugin-auto-expose": "0.3.0",
    "vite": "5.2.8",
    "vite-plugin-commonjs-externals": "^0.1.4",
    "vite-plugin-vuetify": "^2.0.2",
    "vitest": "1.4.0",
    "vue-tsc": "2.0.10"
  },
  "dependencies": {
    "@achingbrain/nat-port-mapper": "1.0.13",
    "@constl/ipa": "1.0.9",
    "@constl/mandataire": "^1.0.0",
    "@constl/mandataire-electron-principal": "^0.4.6",
    "@constl/mandataire-electron-rendu": "^0.4.6",
    "@constl/serveur": "^1.0.0",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@lassi-js/kili": "^0.3.9",
    "@lassi-js/kilimukku": "^1.1.3",
    "@lassi-js/kilimukku-vue": "1.1.2",
    "@mdi/font": "^7.4.47",
    "@vueuse/core": "^10.9.0",
    "@wdns/vue-code-block": "^2.3.1",
    "assert": "^2.1.0",
    "axios": "^1.6.7",
    "core-js": "^3.36.0",
    "crypto-browserify": "^3.12.0",
    "crypto-js": "^4.2.0",
    "d3": "^7.8.5",
    "deep-equal": "^2.2.3",
    "electron-updater": "6.1.8",
    "ennikkai": "^2.2.7",
    "events": "^3.3.0",
    "file-saver": "^2.0.5",
    "image-file-resize": "^1.0.5",
    "js-cookie": "^3.0.5",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "node-gyp-build": "^4.8.0",
    "nuchabal": "^3.2.2",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "platform": "^1.3.6",
    "qrcode.vue": "^3.4.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "semaphore-async-await": "^1.5.1",
    "tslib": "^2.6.2",
    "uuid": "^9.0.1",
    "vue": "3.4.21",
    "vue-router": "^4.3.0",
    "vuetify": "^3.5.14",
    "webfontloader": "^1.6.28",
    "wherearewe": "^2.0.1",
    "wrtc": "^0.4.7"
  }
}
